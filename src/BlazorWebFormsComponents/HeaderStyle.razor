@using System.Drawing;

@code {

	[CascadingParameter(Name = "HeaderStyle")]
	protected TableItemStyle theHeaderStyle { get; set; }

	[Parameter]
	public Color BackColor { get; set; }

	[Parameter]
	public Color BorderColor { get; set; }

	[Parameter]
	public BorderStyle BorderStyle { get; set; }

	[Parameter]
	public Unit BorderWidth { get; set; }

	[Parameter]
	public Color ForeColor { get; set; }

	//protected override void OnParametersSet()
	protected override void OnInitialized()
	{

		if (theHeaderStyle != null)
		{

			theHeaderStyle.BackColor = BackColor;
			theHeaderStyle.BorderColor = BorderColor;
			theHeaderStyle.BorderStyle = BorderStyle;
			theHeaderStyle.BorderWidth = BorderWidth;

			theHeaderStyle.ForeColor = ForeColor;

		}


	}


}